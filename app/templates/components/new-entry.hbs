{{#if addNewEntry}}
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="post">Post</label>
      {{input value=post id="post"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <button {{action 'savePost'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'entryFormShow'}}>Update Post</button>
{{/if}}
